<div class="container">
  <div class="game">
    <h1>Find the Longest Word!</h1>
    <ul>
      <div class="letters">
        <% @letters.each do |letter| %>
          <div class="letter">
            <li><%= letter %></li>
          </div>
        <% end %>
      </div>
    </ul>
    <p>What's the longest word you can make from this list?</p>
    <form action="<%= score_path %>" method="post">
      <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
      <%= hidden_field_tag :letter_array, @letters %>
      <input type="text" name="input" placeholder="Type a word...">
      <input type="submit">
    </form>
  </div>
</div>
